<body class="bg-gray-800 min-h-screen flex items-center justify-center">
    <form class="bg-white/10 backdrop-blur-lg rounded-2xl border-2 border-white/10 shadow-lg p-12 w-[400px] h-[520px] absolute
            transform -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2">
        <h3 class="text-center text-2xl font-medium leading-[42px] mb-8">Login Here</h3>
        <label for="username" class="block mt-8 text-lg font-medium">Username</label>
        <input
            type="text"
            placeholder="Email or Phone"
            id="username"
            class="w-full h-12 bg-white/20 rounded-md px-4 mt-2 text-sm font-light text-white placeholder-gray-500
                focus:outline-none"/>
        <label for="password" class="block mt-8 text-lg font-medium">Password</label>
        <input
            type="password"
            placeholder="Password"
            id="password"
            class="w-full h-12 bg-white/20 rounded-md px-4 mt-2 text-sm font-light text-white placeholder-gray-500
                focus:outline-none"/>
        <button class="mt-12 w-full bg-white text-gray-900 py-3 text-lg font-semibold rounded-md cursor-pointer hover:bg-gray-200">
            Log In</button>
        <div class="social flex mt-8">
            <div class="bg-red-500 w-36 rounded-md px-4 py-2 text-white text-center hover:bg-red-600 transition-colors duration-300">
                <i class="fab fa-google mr-2"></i>Google</div>
            <div class="bg-blue-600 w-36 rounded-md px-4 py-2 text-white text-center ml-6 hover:bg-blue-700 transition-colors
                    duration-300">
                <i class="fab fa-facebook mr-2"></i>Facebook</div>
        </div>
    </form>
</body>